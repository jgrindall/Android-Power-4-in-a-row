<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jgrindall.android.connect4"
      
      android:versionCode="1"
      android:versionName="1.0"
      
      >
      
      
          <supports-screens android:resizeable="false"
                      	android:smallScreens="false"
                      	
			/>
      
      
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="13" />

    <application android:icon="@drawable/icon"
    android:label="@string/app_name"
    android:name=".Connect4App"
   
   android:screenOrientation="portrait"
   android:configChanges="keyboardHidden|orientation"
    >
        
        
        <activity android:name=".activity.MainMenuActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"
                  >
                  
                    <intent-filter>
		                <action android:name="android.intent.action.MAIN" />
		                <category android:name="android.intent.category.LAUNCHER" />
		            </intent-filter>
            
        </activity>
        
        
        <activity android:name=".activity.Connect4Activity"         android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"
                  >
          
        </activity>
        
        
       
        
		<activity android:name=".activity.SettingsActivity" android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"
                  >
        </activity>
        
        <activity android:name=".activity.HelpActivity"        android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation"
                  >
        </activity>
        
		
    </application>
</manifest>